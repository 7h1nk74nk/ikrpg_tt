  <template name="Scrollbar">
    <genericcontrol>
			<anchored>
				<left>
					<anchor>right</anchor>
				</left>
				<top>
					<anchor>top</anchor>
        </top>
				<size>
					<width>5</width>
					<height>5</height>
				</size>
			</anchored>
      <barmargin>
        <x mergerule="replace">-2</x>
      </barmargin>
			<frame>
        <name>control</name>
      </frame>
			<invisible />
			<script>
        local marginx = 0;
        local marginy = 0;
        local dragging = false;
        local targetname = "";
        local targetcontrol = nil;
        local dragstarty, dragstartpos, dragfactor;
        
        function getTarget()
          return targetname;
        end
        
        function setTarget(name)
          if targetcontrol then
            targetcontrol.onScroll = function () end;
          end
          targetname = name;
          if name=="" then
            targetcontrol = nil;
          else
            targetcontrol = window[name];
          end
					if targetcontrol then
						targetcontrol.onScroll = update;
					end
        end
        
				function update()
					setVisible(false);
					if targetcontrol and targetcontrol.isVisible() then
						local sx, px, vx, sy, py, vy = targetcontrol.getScrollState();
						local tw, th = targetcontrol.getSize();

						th = th + 2*marginy

						if vy &lt; sy then
							local pos = py/sy * th;
							local height = vy/sy * th;
	
							setAnchor("left", targetname, "right", "absolute", 1 + marginx);
							setAnchoredWidth(5);
	
							setAnchor("top", targetname, "top", "absolute", pos - marginy);
							setAnchoredHeight(height);
							
							setVisible(true);
            end
					end
				end
				
				function onInit()
          if target and target[1] then
					  setTarget(target[1]);
          end
					if barmargin[1].x then
						marginx = barmargin[1].x[1];
					end
					if barmargin[1].y then
						marginy = barmargin[1].y[1];
					end
				end
				
				function onDrag(button, x, y, draginfo)
					if targetcontrol then
						if not dragging then
							local sx, px, vx, sy, py, vy = targetcontrol.getScrollState();
							
							dragstarty = y;
							dragstartpos = py;
							dragfactor = sy/vy;
						  dragging = true;
						end
						
						targetcontrol.setScrollPosition(0, dragstartpos + (y - dragstarty)*dragfactor);
					end
						
					return true;
				end
				
				function onDragEnd()
					dragging = false;
				end
			</script>
		</genericcontrol>
  </template>

  <windowclass name="Option">
    <sizelimits>
      <minimum>
        <height>15</height>
      </minimum>
    </sizelimits>
    <script>
      local selected = false;
      local readonly = false;
      local fontvalue = "";
      local selectedfont = "";
      local framevalue = "";
      local selectedframe = "";
      
      function getFonts()
        return fontvalue,selectedfont;
      end
      
      function setFonts(normal,sel)
        fontvalue = normal or "";
        selectedfont = sel or "";
        setSelected(selected);
      end
      
      function getFrames()
        return framevalue,selectedframe;
      end
      
      function setFrames(normal,sel)
        framevalue = normal or "";
        selectedframe = sel or "";
        setSelected(selected);
      end
      
      function setReadOnly(flag)
        if flag then
          readonly = true;
        else
          readonly = false;
        end
      end
      
      function isReadOnly()
        return readonly;
      end
      
      function setSelected(flag)
        if flag then
          selected = true;
          setFrame(selectedframe);
        else
          selected = false;
          setFrame(framevalue);
        end
        if Text then
          if flag then
            Text.setFont(selectedfont);
          else
            Text.setFont(fontvalue);
          end
        end
      end
      
      function onInit()
        if selected then
          Text.setFont(selectedfont);
        else
          Text.setFont(fontvalue);
        end
      end
      
      function clicked()
        if windowlist and windowlist.optionClicked then
          windowlist.optionClicked(self);
        end
      end
      
      function isSelected()
        return selected;
      end
      
      function setRowHeight(h)
        local w,t = getSize();
        setSize(w,h);
      end
      
      function getRowHeight()
        local w,h = getSize();
        return h;
      end
    </script>
    <sheetdata>
      <!-- Invisible fields -->
      <stringcontrol name="Value">
        <bounds>0,0,0,0</bounds>
        <invisible/>
      </stringcontrol>
      <!-- Visible fields -->
      <stringcontrol name="Text">
        <anchored>
          <left>
            <anchor>left</anchor>
          </left>
          <right>
            <anchor>right</anchor>
          </right>
          <top>
            <anchor>top</anchor>
          </top>
          <bottom>
            <anchor>bottom</anchor>
          </bottom>
        </anchored>
        <static/>
        <script>
          function onClickDown(...)
            return not window.isReadOnly();
