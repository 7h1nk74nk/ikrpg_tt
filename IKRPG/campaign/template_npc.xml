	<template name="list_npc_vpowerfields">
		<windowlist>
			<anchored>
				<top>
					<parent>columnanchor</parent>
					<anchor>bottom</anchor>
					<relation>relative</relation>
					<offset>3</offset>
				</top>
				<left><offset>20</offset></left>
				<right><offset>-15</offset></right>
			</anchored>
			<class>npc_vpowerfield</class>
			<readonly />
			<noscroll />
			<script>
				function update()
					local bShow = false;
					for _,w in pairs(getWindows()) do
						if w.update() then
							bShow = true;
						end
					end
					
					setVisible(bShow);
				end
				
				function onFilter(w)
					return w.onFilter();
				end
			</script>
		</windowlist>
	</template>

	<template name="list_npc_trap">
		<windowlist>
			<anchored>
				<top>
					<parent>columnanchor</parent>
					<relation>relative</relation>
					<anchor>bottom</anchor>
				</top>
				<left />
				<right />
			</anchored>
			<noscroll />
			<allowcreate />
			<allowdelete />
			<createonempty />
			<sortby mergerule="replace"><control>name</control></sortby>
			<script>
				function update()
					local bLock = isReadOnly();
					
					local bShow = false;
					for _,w in pairs(getWindows()) do
						if w.update() then
							bShow = true;
						end
					end
					
					if bLock then
						setVisible(bShow);
					else
						setVisible(true);
					end
					applyFilter();
				end
				
				function onFilter(w)
					return w.onFilter();
				end
			</script>
		</windowlist>
	</template>

