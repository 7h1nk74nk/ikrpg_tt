<root>    
	<windowclass name="charsheet_skills">
		<placement>
			<size>
				<width>252</width>
				<height>611</height>
			</size>
		</placement>
		<nodelete />
		<sheetdata>
			<frame_char name="skillframe">
				<bounds>15,5,400,530</bounds>
			</frame_char>

			<stringcontrol name="skilltitle">
				<font>sheetlabelsmall</font>
				<static>SKILLS</static>
				<anchored>
					<to>skillframe</to>
					<position>insidetopleft</position>
					<offset>5,2</offset>                
				</anchored>   
				<color>ffffffff</color>
				<frame>
					<name>headerquest</name>
					<offset>5,2,5,2</offset>
				</frame>
				<script>
<!-- 					function onClickDown( button, x, y ) 
						window.skilltitle.setVisible(false);
						window.skillheader1.setVisible(false);
						window.skillheader2.setVisible(false);
						window.skillheader3.setVisible(false);
						window.skillheader4.setVisible(false);
						window.skillheader5.setVisible(false);
						window.skillheader6.setVisible(false);
						window.skilllist.setVisible(false);
					end -->
				</script>
            </stringcontrol>
			
			<label_sm name="skillheader1">
				<bounds>30,25,30,10</bounds>
				<static>Name</static>
			</label_sm>
            <label_sm name="skillheader2">
				<bounds>205,25,30,10</bounds>
				<static>Type</static>
			</label_sm>			
			<label_sm name="skillheader3">
				<bounds>243,25,30,10</bounds>
				<static>Stat</static>
			</label_sm>			
			<label_sm name="skillheader4">
				<bounds>280,25,30,10</bounds>
				<static>Max</static>
			</label_sm>
			<label_sm name="skillheader5">
				<bounds>315,25,30,10</bounds>
				<static>Rank</static>
			</label_sm>
            <label_sm name="skillheader6">
				<bounds>352,25,30,10</bounds>
				<static>Total</static>
			</label_sm>

			<windowlist name="skilllist">
				<anchored>
					<to>skillframe</to>
					<position>over</position>
					<offset>-15,-15</offset>
					<top>
						<offset>30</offset>
					</top>
				</anchored>
				<datasource>.skilllist</datasource>
				<class>charsheet_skill</class>
                
				<sortby><control>order</control></sortby>
				<script file="charsheet/scripts/charsheet_skilllist.lua" />
				
			</windowlist>
			<scrollbar_charlist>
				<anchored>
					<to>skilllist</to>
                    <offset>-10,-10</offset>
				</anchored>
				<target>skilllist</target>
			</scrollbar_charlist>
            		
            
		</sheetdata>
	</windowclass>
</root>