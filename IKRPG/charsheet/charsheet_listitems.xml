					<left><offset>270</offset></left>					
					<size>
						<height>18</height>
                        <width>18</width>
					</size>
				</anchored>
				<icon>indicator_expanddown</icon>
				<script>
					function onValueChanged()   
                        window.prerequisite.setVisible(getValue());
                        window.description.setVisible(getValue());	
                        window.prerequlabel.setVisible(getValue()); 
					end
				</script>
			</button_toggle>
           
        </sheetdata>
